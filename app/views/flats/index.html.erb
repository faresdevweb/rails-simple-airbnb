
<div class="d-flex justify-content-between w-50">
  <h1>Simple airbnb</h1>
</div>

<div class="d-flex mt-5 container">
    <% @flats.each do |flat| %>
  <div class="container">
    <div class="card" style="width: 18rem;">
      <img src="https://source.unsplash.com/1600x900/?apartment" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><%= flat.address %></p>
        <p class="card-text"><%= flat.description %></p>
      </div>
      <%= link_to 'Show details', flat_path(flat), class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>

</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Simple Airbnb</h1>
    <%= link_to 'Add flat', new_flat_path, class: "btn btn-primary" %>
  </div>

  <!-- Utilisez 'row' pour crÃ©er une ligne de cartes -->
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @flats.each do |flat| %>
      <div class="col">
        <div class="card h-100">
          <img src="https://source.unsplash.com/1600x900/?apartment" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p class="card-text"><%= flat.description %></p>
            <%= link_to 'Show details', flat_path(flat), class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
